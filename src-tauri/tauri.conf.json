{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Subscription Tracker",
  "version": "0.1.3",
  "identifier": "com.leeberlin.subscription-tracker",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Subscription Tracker",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Lee Berlin",
    "shortDescription": "Manage shared subscriptions and track member payments",
    "longDescription": "A modern desktop application for managing shared subscription services like Netflix, Spotify, ChatGPT, and tracking member payments with email reminders.",
    "copyright": "Â© 2026 Lee Berlin. All rights reserved.",
    "category": "Productivity",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": null,
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      },
      "allowDowngrades": true,
      "nsis": {
        "displayLanguageSelector": true,
        "installerIcon": "icons/icon.ico",
        "headerImage": null,
        "sidebarImage": null,
        "installMode": "currentUser",
        "languages": [
          "English",
          "Vietnamese"
        ],
        "compression": "lzma"
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "linux": {
      "appId": "com.leeberlin.subscription-tracker"
    }
  }
}